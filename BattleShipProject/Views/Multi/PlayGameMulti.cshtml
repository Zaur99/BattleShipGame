@model GameStartModel
@{
    ViewData["Title"] = "PlayGame";
}


<div id="disconnectedContainer" class="hide">
    <div class="loadingContainer">
        <div class="windowCenter">
            <h1 class="text-center opponentDisconnectedText">Opponent has disconnected!</h1>
        </div>
    </div>
</div>

<div id="winnerContainer" class="hide">
    <div class="loadingContainer">
        <div class="windowCenter">
            <div class="hide" id="youLostText">
                <h1 class="text-center youLostText">You lost!</h1>
            </div>
            <div class="hide" id="youWonText">
                <h1 class="text-center youWonText">You won!</h1>
            </div>
        </div>
    </div>
</div>

<div id="loadingContainer" class="loadingContainer">
    <div class="windowCenter">
        <div class="loader"></div>
        <div class="windowCenterLoadingText">
            <h2 class="text-center">Waiting for opponent to connect...</h2>
        </div>
    </div>
</div>

<div id="playersNames" class="hide">
    <div class="text-center">
        <h1 id="playerOne"></h1>
        <div class="playerVersus">vs</div>
        <h1 id="playerTwo"></h1>
    </div>
</div>


<div id="turnRivals" class="hide">
    <div id="playerTurn">
        <h2 class="text-center myTurnHeader">Your turn!</h2>
    </div>
    <div id="opponentTurn">
        <h2 class="text-center opponentTurnHeader">Opponent's turn!</h2>
    </div>

</div>
<div id="playGameContent" class="hide">
    <div class="container-fluid row">
        <div class="unselectableItems col-lg">
            <h3 class="text-center">My battlefield</h3>
            <table class="table table-dark text-center table-bordered">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        @for (int i = 0; i < 10; i++)
                        {
                            <th scope="col">@i</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < 10; i++)
                    {
                        <tr>
                            <th scope="row">@i</th>
                            @for (int j = 0; j < 10; j++)
                            {
                                <td px="@j" py="@i" class="tableCellPlayer" />
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-lg">
            <h3 class="text-center">Opponent's battlefield</h3>
            <table class="table table-dark text-center table-bordered">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        @for (int i = 0; i < 10; i++)
                        {
                            <th scope="col">@i</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < 10; i++)
                    {
                        <tr>
                            <th scope="row">@i</th>
                            @for (int j = 0; j < 10; j++)
                            {
                                <td ox="@j" oy="@i" class="tableCell" />
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<form class="hide">
    <input type="hidden" asp-for="PlayerName" id="PlayerName">
    <input type="hidden" asp-for="SerializedBattleFieldArray" id="SerializedBFArray">
</form>
@section Scripts {
    <script src="~/lib/microsoft-signalr/signalr.js"></script>

    <script src="~/js/CustomJs/playOnline.js"></script>
}