@model GameStartModel
<div class="row">
    <div class="col-md-4">
        <input type="button" class="btn btn-danger" id="carrier" value="Carrier" />
        <input type="button" class="btn btn-warning" id="submarine" value="Submarine" disabled />
        <input type="button" class="btn btn-primary" id="destroyer" value="Destroyer" disabled />
    </div>
    <div class="col-md-8">
        <div id="playerSetupTable">
            <div style="user-select:none;">
                <table class="table table-dark table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            @for (int i = 0; i < 10; i++)
                            {
                                <th scope="col">@i</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < 10; i++)
                        {
                            <tr>
                                <th>@i</th>
                                @for (int j = 0; j < 10; j++)
                                {
                                    <td px="@j" py="@i" tableType="player" class="tableCell" />
                                }
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

<form action="BattleFieldSetupMulti" method="post">
    <input asp-for="PlayerName" class="form-control" placeholder="Adınızı daxil edin" />
    <div><span asp-validation-for="PlayerName" class="text-danger"></span></div>
    <input type="hidden" asp-for="SerializedBattleFieldArray" id="serializedBattleFieldArray" />
    <div><span asp-validation-for="SerializedBattleFieldArray" class="text-danger"></span></div>

    <input id="startBtn" class="btn btn-primary" onclick="mapArray()" type="submit" value="Start" />
</form>

@section Scripts {


    <script src="~/js/CustomJs/BFOnline.js"></script>
}




